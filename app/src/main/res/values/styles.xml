<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Catalog Items -->
    <style name="ListItemNameStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="ListItemProductCodeStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="ListItemPriceStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="ListItemQuantityStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="LabelInStockStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="SellButtonStyle" parent="AppTheme">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">@dimen/sell_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <!-- Editor Activity -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryEditor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentEditor</item>
    </style>

    <!-- Style for a category in the editor -->
    <style name="CategoryStyle" parent="EditorTheme">
        <item name="android:textColor">@color/colorAccentEditor</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for an EditText field in the editor -->
    <style name="EditorFieldStyle" parent="EditorTheme">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for Order Button in the editor -->
    <style name="OrderButtonStyle" parent="EditorTheme">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">@dimen/editor_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

</resources>
